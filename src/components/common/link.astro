---
import { cn } from "~/lib/utils";

type Props = {
  href: string;
  className?: string;
  target?: "_blank" | "_parent" | "_self" | "_top";
};

const { href, className, target = "_self" } = Astro.props;
---

<a
  href={href}
  target={target}
  class={cn(
    "bg-muted text-muted-foreground mr-0.5 px-1 font-medium",
    className
  )}><slot /></a
>
