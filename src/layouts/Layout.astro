---
import Container from "@/components/Container.astro";
import "@/styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Sidebar from "@/components/Sidebar";
import "@fontsource/dm-sans";

const {
  title = "astro - generalist, explorer.",
  description = "full-stack engineer interested in building scalable and performant web applications.",
} = Astro.props;
const url = Astro.url;
const ogImage = new URL("/og-image.png", Astro.url);

const fonts = [
  { href: "/fonts/PPPangaia-Bold.otf", type: "font/otf" },
  { href: "/fonts/PPPangaia-BoldItalic.otf", type: "font/otf" },
  { href: "/fonts/PPPangaia-Medium.otf", type: "font/otf" },
  { href: "/fonts/PPPangaia-MediumItalic.otf", type: "font/otf" },
  { href: "/fonts/PPPangaia-Ultralight.otf", type: "font/otf" },
  { href: "/fonts/PPPangaia-UltralightItalic.otf", type: "font/otf" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:site_name" content="astro" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1004" />
    <meta property="og:image:height" content="591" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta name="twitter:image:type" content="image/png" />
    <meta name="twitter:image:width" content="1200" />
    <meta name="twitter:image:height" content="630" />
    <meta name="twitter:image" content={ogImage} />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="sitemap" href="/sitemap-0.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    {
      fonts.map(({ href, type }) => (
        <link rel="preload" href={href} as="font" type={type} />
      ))
    }

    <ViewTransitions />
  </head>
  <body>
    <div class="flex min-h-screen">
      <Sidebar client:only="react" />
      <main class="flex-1 lg:ml-64">
        <Container>
          <slot />
        </Container>
      </main>
    </div>
  </body>
</html>
