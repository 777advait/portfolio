---
import Container from "@/components/Container.astro";
import Layout from "../layouts/Layout.astro";
import ProjectList from "@/components/projects/ProjectList";

const projects = [
  {
    title: "WNE3 Live",
    role: "Lead Full Stack Engineer",
    href: "https://wne3.com",
    description:
      "A live streaming platform focused on delivering high-quality content.",
  },
  {
    title: "Rift",
    role: "Freelance Developer",
    href: "https://onrift.xyz",
    description:
      "Rift is a social network designed to connect like-minded creators.",
  },
  {
    title: "IndieLettr",
    role: "Founder, Creator",
    href: "https://indielettr.com",
    description: "A newsletter platform for independent creators.",
  },
  {
    title: "Limitix",
    role: "Maintainer, Creator",
    href: "https://gitbook.io",
    description: "An open-source toolkit for maintaining software projects.",
  },
  {
    title: "Lettr0",
    role: "Founder, Creator",
    href: "https://lettr0.me",
