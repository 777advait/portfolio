---
import Container from "@/components/Container.astro";
import Layout from "../layouts/Layout.astro";
import type { SanityDocument } from "@sanity/client";
import { loadQuery } from "../sanity/lib/load-query";
import Link from "@/components/Link.astro";
import type { Writings } from "@/lib/definitions";

export async function getStaticPaths() {
  const { data: writings } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "writings"]`,
  });

  return writings.map(({ slug }) => {
    return {
      params: {
        slug: slug.current,
      },
    };
  });
}

const { params } = Astro;

const { data: writings } = await loadQuery<Writings[]>({
  query: `*[_type == "writings"]`,
  params,
});
---

<Layout title="writings | astro">
  <Container>
    <div
      class="flex flex-col items-center justify-between text-center space-y-4"
    >
      <div>
        <p>
          This page is under development, the data below is being pulled from
          cms(/admin)
        </p>
      </div>
      <ul>
        {
          writings.map((writing) => {
            return (
              <li>
                <Link
                  className="lg:text-base"
                  href={`/writings/${writing.slug.current}`}
                >
                  {writing.title}
                </Link>
              </li>
            );
          })
        }
      </ul>
    </div>
  </Container>
</Layout>
